@model IEnumerable<TrabajoN4.Models.Mascota>

@{
    ViewData["Title"] = "Lista de Perros";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">üê∂ Cat√°logo de Perros</h1>

    <!-- Filtros -->
    <div class="row g-3 mb-4 align-items-end">
        <div class="col-md-3">
            <label class="form-label">Buscar</label>
            <input type="text" id="searchInput" class="form-control" placeholder="Nombre o descripci√≥n">
        </div>
        <div class="col-md-3">
            <label class="form-label">Tama√±o</label>
            <select id="sizeFilter" class="form-select">
                <option value="">Todos</option>
                <option value="Peque√±o">Peque√±o</option>
                <option value="Mediano">Mediano</option>
                <option value="Grande">Grande</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Peso</label>
            <select id="weightFilter" class="form-select">
                <option value="">Todos</option>
                <option value="menos10">Menos de 10 kg</option>
                <option value="10a25">10‚Äì25 kg</option>
                <option value="mas25">M√°s de 25 kg</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">G√©nero</label>
            <select id="genderFilter" class="form-select">
                <option value="">Todos</option>
                <option value="Macho">Macho</option>
                <option value="Hembra">Hembra</option>
            </select>
        </div>
    </div>

    <!-- Rejilla de perros -->
    <div class="row" id="dogCards">
        @foreach (var perro in Model)
        {
            <div class="col-md-3 mb-4 dog-card"
                 data-nombre="@perro.Nombre"
                 data-descripcion="@perro.Descripcion"
                 data-tamano="@perro.Tama√±o"
                 data-peso="@perro.Peso"
                 data-genero="@perro.Genero">
                <div class="card h-100">
                    <img src="@perro.ImagenUrl" class="card-img-top" alt="@perro.Nombre" style="object-fit:cover; width:100%; height:180px;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@perro.Nombre</h5>
                        <p class="card-text flex-grow-1">@perro.Descripcion</p>
                        <a href="@Url.Action("Detalles", "Perros", new { id = perro.Id })"
                           class="btn btn-primary mt-auto">Ver detalles</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Paginaci√≥n -->
    <nav class="mt-4">
        <ul class="pagination justify-content-center" id="paginacion"></ul>
    </nav>
</div>

@section Scripts {
    <script src="~/js/buscador.js"></script>
    <script src="~/js/paginacion.js"></script>
    <script src="~/js/perros.js"></script>
}
